{# templates/localisation/_delete_form.html.twig #}
<form method="post" action="{{ path('app_localisation_delete', {'id': localisation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette localisation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ localisation.id) }}">
    <button class="btn btn-danger btn-sm mt-2">Supprimer</button>
</form>
