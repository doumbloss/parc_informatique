{# templates/localisation/_form.html.twig #}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form) }}

                    <h2 class="text-center mb-4">{{ button_label|default('Enregistrer') }} la localisation</h2>

                    {% for field in form %}
                        {% if field.vars.name not in ['_token'] %}
                            <div class="mb-3">
                                {{ form_label(field) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(field) }}
                            </div>
                        {% endif %}
                    {% endfor %}

                    <div class="d-grid">
                        <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
