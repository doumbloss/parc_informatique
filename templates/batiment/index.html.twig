{# templates/batiment/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Bâtiments{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }
        
        .stats-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        
        .search-section {
            background: #f8f9fa;
            padding: 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
            border: 1px solid #e9ecef;
        }
        
        .table-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .custom-table {
            margin-bottom: 0;
        }
        
        .custom-table thead th {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            border: none;
            padding: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.85rem;
        }
        
        .custom-table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid #f8f9fa;
        }
        
        .custom-table tbody tr:hover {
            background: linear-gradient(90deg, rgba(40, 167, 69, 0.05), rgba(32, 201, 151, 0.05));
            transform: translateX(5px);
        }
        
        .custom-table td {
            padding: 1rem;
            vertical-align: middle;
            border: none;
        }
        
        .building-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(45deg, #28a745, #20c997);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin: 0 auto;
        }
        
        .btn-action {
            padding: 0.4rem 0.8rem;
            margin: 0 0.2rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }
        
        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #6c757d;
        }
        
        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        
        .building-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        .description-text {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        
        .description-full {
            display: none;
            margin-top: 0.5rem;
            padding: 0.5rem;
            background: #f8f9fa;
            border-radius: 5px;
            font-size: 0.9rem;
            border-left: 3px solid #28a745;
        }
        
        @media (max-width: 768px) {
            .custom-table {
                font-size: 0.85rem;
            }
            
            .btn-action {
                padding: 0.3rem 0.6rem;
                font-size: 0.8rem;
            }
            
            .building-icon {
                width: 40px;
                height: 40px;
                font-size: 1.2rem;
            }
            
            .description-text {
                max-width: 200px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2 fw-bold">
                    <i class="fas fa-building me-3"></i>
                    Gestion des Bâtiments
                </h1>
                <p class="mb-0 opacity-75">Administrez et gérez les bâtiments de votre parc informatique</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="{{ path('app_batiment_new') }}" class="btn btn-light btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>
                    Nouveau bâtiment
                </a>
            </div>
        </div>
        
        <!-- Statistics Cards -->
        <div class="row mt-4">
            <div class="col-md-4 mb-3">
                <div class="stats-card">
                    <i class="fas fa-building fa-2x mb-2"></i>
                    <h3>{{ batiments|length }}</h3>
                    <small>Total Bâtiments</small>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="stats-card">
                    <i class="fas fa-map-marker-alt fa-2x mb-2"></i>
                    <h3>
                        {% set locations = [] %}
                        {% for batiment in batiments %}
                            {% if batiment.adresse and batiment.adresse not in locations %}
                                {% set locations = locations|merge([batiment.adresse]) %}
                            {% endif %}
                        {% endfor %}
                        {{ locations|length }}
                    </h3>
                    <small>Localisations</small>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="stats-card">
                    <i class="fas fa-chart-line fa-2x mb-2"></i>
                    <h3>{{ "now"|date("Y") }}</h3>
                    <small>Année en cours</small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Search Section -->
    <div class="search-section">
        <form method="GET" class="row g-3" id="searchForm">
            <div class="col-md-6">
                <label class="form-label fw-semibold">Rechercher un bâtiment</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control" name="search" 
                           placeholder="Nom du bâtiment, description..." 
                           value="{{ app.request.get('search') }}">
                </div>
            </div>
            
            <div class="col-md-4">
                <label class="form-label fw-semibold">Trier par</label>
                <select class="form-select" name="sort">
                    <option value="nom" {{ app.request.get('sort') == 'nom' ? 'selected' : '' }}>Nom A-Z</option>
                    <option value="nom_desc" {{ app.request.get('sort') == 'nom_desc' ? 'selected' : '' }}>Nom Z-A</option>
                    <option value="id" {{ app.request.get('sort') == 'id' ? 'selected' : '' }}>Plus récent</option>
                    <option value="id_desc" {{ app.request.get('sort') == 'id_desc' ? 'selected' : '' }}>Plus ancien</option>
                </select>
            </div>
            
            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-success flex-fill">
                    <i class="fas fa-filter me-1"></i>
                    Filtrer
                </button>
                <a href="{{ path('app_batiment_index') }}" class="btn btn-outline-secondary" 
                   data-bs-toggle="tooltip" title="Réinitialiser">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>

    <!-- Active Filters Indicator -->
    {% if app.request.get('search') or app.request.get('sort') %}
        <div class="alert alert-info d-flex align-items-center mb-3">
            <i class="fas fa-filter me-2"></i>
            <strong>Filtres actifs:</strong>
            {% if app.request.get('search') %}
                <span class="badge bg-primary ms-2">Recherche: "{{ app.request.get('search') }}"</span>
            {% endif %}
            {% if app.request.get('sort') %}
                <span class="badge bg-info ms-2">Tri: {{ app.request.get('sort') }}</span>
            {% endif %}
        </div>
    {% endif %}

    <!-- Table Container -->
    <div class="table-container">
        {% if batiments|length > 0 %}
            <div class="table-responsive">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th width="60">
                                <input type="checkbox" id="selectAll" class="form-check-input">
                            </th>
                            <th width="80">Icône</th>
                            <th>Nom du Bâtiment</th>
                            <th>Description</th>
                            <th>Informations</th>
                            <th>Statut</th>
                            <th width="200">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for batiment in batiments %}
                        <tr data-building-id="{{ batiment.id }}">
                            <td>
                                <input type="checkbox" class="form-check-input building-checkbox" 
                                       value="{{ batiment.id }}">
                            </td>
                            <td>
                                <div class="building-icon">
                                    <i class="fas fa-building"></i>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <strong class="d-block fs-5">{{ batiment.nom }}</strong>
                                    <small class="text-muted">ID: #{{ batiment.id }}</small>
                                </div>
                            </td>
                            <td>
                                {% if batiment.description %}
                                    <div class="description-text" title="{{ batiment.description }}">
                                        {{ batiment.description }}
                                    </div>
                                    {% if batiment.description|length > 50 %}
                                        <button class="btn btn-link btn-sm p-0 mt-1 toggle-description" 
                                                data-target="desc-{{ batiment.id }}">
                                            <i class="fas fa-eye me-1"></i>Voir plus
                                        </button>
                                        <div class="description-full" id="desc-{{ batiment.id }}">
                                            {{ batiment.description }}
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <em class="text-muted">Aucune description</em>
                                {% endif %}
                            </td>
                            <td>
                                {% if batiment.adresse %}
                                    <div class="building-card">
                                        <i class="fas fa-map-marker-alt text-success me-2"></i>
                                        <strong>Adresse:</strong><br>
                                        <small>{{ batiment.adresse }}</small>
                                    </div>
                                {% endif %}
                                {% if batiment.superficie %}
                                    <div class="building-card">
                                        <i class="fas fa-ruler-combined text-info me-2"></i>
                                        <strong>Superficie:</strong><br>
                                        <small>{{ batiment.superficie }} m²</small>
                                    </div>
                                {% endif %}
                                {% if batiment.etages %}
                                    <div class="building-card">
                                        <i class="fas fa-layer-group text-warning me-2"></i>
                                        <strong>Étages:</strong><br>
                                        <small>{{ batiment.etages }} niveau(x)</small>
                                    </div>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Actif
                                </span>
                                <br>
                                <small class="text-muted mt-1 d-block">
                                    <i class="fas fa-calendar me-1"></i>
                                    Créé le {{ batiment.createdAt ? batiment.createdAt|date('d/m/Y') : 'N/A' }}
                                </small>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap gap-1">
                                    <a href="{{ path('app_batiment_show', {'id': batiment.id}) }}" 
                                       class="btn-action btn btn-outline-info btn-sm"
                                       data-bs-toggle="tooltip" title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_batiment_edit', {'id': batiment.id}) }}" 
                                       class="btn-action btn btn-outline-primary btn-sm"
                                       data-bs-toggle="tooltip" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn-action btn btn-outline-success btn-sm"
                                            data-bs-toggle="tooltip" title="Voir les équipements">
                                        <i class="fas fa-computer"></i>
                                    </button>
                                    <button class="btn-action btn btn-outline-danger btn-sm"
                                            data-bs-toggle="tooltip" title="Supprimer"
                                            onclick="confirmDelete({{ batiment.id }}, '{{ batiment.nom }}')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- Table Footer -->
            <div class="bg-light p-3 border-top">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center gap-3">
                            <button class="btn btn-outline-primary btn-sm" id="bulkActions" disabled>
                                <i class="fas fa-tasks me-1"></i>
                                Actions groupées
                            </button>
                            <small class="text-muted">
                                <span id="selectedCount">0</span> bâtiment(s) sélectionné(s)
                            </small>
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <small class="text-muted">
                            Affichage de {{ batiments|length }} bâtiment(s)
                        </small>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-building"></i>
                </div>
                <h3>Aucun bâtiment trouvé</h3>
                <p class="text-muted mb-4">
                    {% if app.request.get('search') %}
                        Aucun bâtiment ne correspond à votre recherche "{{ app.request.get('search') }}".
                    {% else %}
                        Commencez par créer votre premier bâtiment.
                    {% endif %}
                </p>
                <a href="{{ path('app_batiment_new') }}" class="btn btn-success btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>
                    Créer le premier bâtiment
                </a>
            </div>
        {% endif %}
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirmer la suppression
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer le bâtiment <strong id="deleteBuildingName"></strong> ?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Cette action supprimera également tous les équipements associés à ce bâtiment !
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="POST" id="deleteForm" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Supprimer définitivement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Toggle description functionality
            document.querySelectorAll('.toggle-description').forEach(button => {
                button.addEventListener('click', function() {
                    const targetId = this.dataset.target;
                    const target = document.getElementById(targetId);
                    const icon = this.querySelector('i');
                    
                    if (target.style.display === 'none' || target.style.display === '') {
                        target.style.display = 'block';
                        this.innerHTML = '<i class="fas fa-eye-slash me-1"></i>Voir moins';
                    } else {
                        target.style.display = 'none';
                        this.innerHTML = '<i class="fas fa-eye me-1"></i>Voir plus';
                    }
                });
            });
            
            // Checkbox selection functionality
            const selectAllCheckbox = document.getElementById('selectAll');
            const buildingCheckboxes = document.querySelectorAll('.building-checkbox');
            const selectedCountSpan = document.getElementById('selectedCount');
            const bulkActionsBtn = document.getElementById('bulkActions');
            
            // Select all functionality
            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function() {
                    buildingCheckboxes.forEach(checkbox => {
                        checkbox.checked = this.checked;
                    });
                    updateSelectedCount();
                });
            }
            
            // Individual checkbox change
            buildingCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateSelectedCount);
            });
            
            function updateSelectedCount() {
                const selectedCount = document.querySelectorAll('.building-checkbox:checked').length;
                if (selectedCountSpan) selectedCountSpan.textContent = selectedCount;
                if (bulkActionsBtn) bulkActionsBtn.disabled = selectedCount === 0;
                
                // Update select all checkbox state
                if (selectAllCheckbox) {
                    selectAllCheckbox.indeterminate = selectedCount > 0 && selectedCount < buildingCheckboxes.length;
                    selectAllCheckbox.checked = selectedCount === buildingCheckboxes.length && selectedCount > 0;
                }
            }
            
            // Row hover effects
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(5px)';
                });
                
                row.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });
        });
        
        // Delete confirmation
        function confirmDelete(buildingId, buildingName) {
            document.getElementById('deleteBuildingName').textContent = buildingName;
            document.getElementById('deleteForm').action = `/batiment/${buildingId}`;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl+N for new building
            if (e.ctrlKey && e.key === 'n') {
                e.preventDefault();
                window.location.href = "{{ path('app_batiment_new') }}";
            }
            
            // Ctrl+F to focus search
            if (e.ctrlKey && e.key === 'f') {
                e.preventDefault();
                document.querySelector('input[name="search"]').focus();
            }
        });
    </script>
{% endblock %}