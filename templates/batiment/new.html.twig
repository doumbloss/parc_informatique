{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau bâtiment{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Ajouter un bâtiment</h4>
                    </div>
                    <div class="card-body">
                        {{ include('batiment/_form.html.twig', {'button_label': 'Créer'}) }}
                    </div>
                    <div class="card-footer text-end">
                        <a href="{{ path('app_batiment_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
