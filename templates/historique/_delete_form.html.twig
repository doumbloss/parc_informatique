{# templates/historique/_delete_form.html.twig #}
<form method="post" action="{{ path('app_historique_delete', {'id': historique.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet historique ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ historique.id) }}">
    <button class="btn btn-danger btn-sm mt-2">Supprimer</button>
</form>
