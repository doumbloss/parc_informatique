{# templates/equipement/_delete_form.html.twig #}
<form method="post" action="{{ path('app_equipement_delete', {'id': equipement.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet équipement ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipement.id) }}">
    <button class="btn btn-danger btn-sm mt-2">Supprimer</button>
</form>
